#!/bin/sh

# Gives a dmenu prompt to search Searx.
# Without input, will open Searx.com.
# Anything else, it search it.

pgrep -x dmenu && exit

choice=$(echo "ðŸ”Ž" | dmenu -i -p "Search Searx:") || exit 1

if [ "$choice" = "ðŸ”Ž"  ]; then
	$BROWSER "https://searx.me/search"
else
	$BROWSER "https://searx.me/search?q=$choice&t=ffab&atb=v1-1"
fi
